# Copy this file to `.env` and adjust values for your environment.
# The API server reads these environment variables when launched.

# Authentication token required by the HTTP API.
STARROCKS_API_BEARER_TOKEN=change-me

# Network configuration for the FastAPI/Uvicorn service.
STARROCKS_API_HOST=0.0.0.0
STARROCKS_API_PORT=8002
STARROCKS_API_LOG_LEVEL=info

# Optional overrides for data summarisation/plotting behaviour.
STARROCKS_OVERVIEW_LIMIT=20000
STARROCKS_PLOTLY_JSON=0

# StarRocks connection settings. Either provide STARROCKS_URL or the individual fields below.
# STARROCKS_URL=starrocks://user:password@host:9030/database
STARROCKS_HOST=localhost
STARROCKS_PORT=9030
STARROCKS_USER=root
STARROCKS_PASSWORD=
STARROCKS_DB=
STARROCKS_POOL_SIZE=10
STARROCKS_CONNECTION_TIMEOUT=10

# Enable Arrow Flight SQL support when available.
STARROCKS_FE_ARROW_FLIGHT_SQL_PORT=
